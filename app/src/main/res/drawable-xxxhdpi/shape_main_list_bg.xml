<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- This is the main color -->
    <item>
        <shape>
            <!--    边框颜色 -->
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
    <!-- 给View的上 左  右设置8dp的边框 -->
    <item android:top="5dp" android:left="5dp" android:right="2.5dp" android:bottom="2.5dp" >
        <shape>
            <!--     View填充颜色 -->
            <solid android:color="#f5eaea" />
        </shape>
    </item>

</layer-list>