<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recovery_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.smartlowerlimbsrecoveryinstrument.Recovery.RecoveryView">

    <RelativeLayout
        android:id="@+id/title_layout"
        style="@style/title_layout">
        <ImageView
            android:id="@+id/back"
            style="@style/title_layout_back"/>

        <TextView
            style="@style/title_layout_title"
            android:text="智能康复仪" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="屈髋角度"
                android:layout_margin="20dp"
                android:textSize="30dp" />
            <ImageButton
                android:id="@+id/qukuanjian"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/left_grey"
                android:tint="#000000"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/qukuan"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="000"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#f5eaea"
                android:textSize="30dp"/>
            <ImageButton
                android:id="@+id/qukuanjia"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/right"
                android:tint="#000000"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="屈膝角度"
                android:layout_margin="20dp"
                android:textSize="30dp" />
            <ImageButton
                android:id="@+id/quxijian"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/left_grey"
                android:tint="#000000"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/quxi"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="000"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#f5eaea"
                android:textSize="30dp"/>
            <ImageButton
                android:id="@+id/quxijia"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/right"
                android:tint="#000000"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大腿长度"
                android:layout_margin="20dp"
                android:textSize="30dp" />
            <ImageButton
                android:id="@+id/datuijian"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/left_grey"
                android:tint="#000000"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/datui"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="000"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#f5eaea"
                android:textSize="30dp"/>
            <ImageButton
                android:id="@+id/datuijia"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/right"
                android:tint="#000000"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小腿长度"
                android:layout_margin="20dp"
                android:textSize="30dp" />
            <ImageButton
                android:id="@+id/xiaotuijian"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/left_grey"
                android:tint="#000000"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/xiaotui"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="000"
                android:background="#f5eaea"
                android:textSize="30dp"/>
            <ImageButton
                android:id="@+id/xiaotuijia"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/right"
                android:tint="#000000"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/start"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/shape_round_textview"
        android:text="开始\n治疗"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/listview"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
