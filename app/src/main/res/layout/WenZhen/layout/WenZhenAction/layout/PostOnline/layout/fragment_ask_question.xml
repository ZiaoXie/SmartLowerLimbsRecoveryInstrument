<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.needletherapy.WenZhen.WenZhenAction.PostOnLine.AskQuestion"
    android:id="@+id/ask_question">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请详细描述您的问题，包括身体状况，疾病和症状等，我们将会为您推荐最专业的医生为您服务。"/>

        <EditText
            android:id="@+id/miaoshu"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="提问"
            android:inputType="textMultiLine"
            android:gravity="left|top"
            android:minLines="6"
            android:layout_margin="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/photo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@mipmap/camera"
                android:layout_marginRight="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加照片"
                android:layout_alignTop="@+id/photo"
                android:layout_toRightOf="@+id/photo"
                android:textSize="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="症状的部位，检查报告或者其他材料"
                android:layout_alignBottom="@+id/photo"
                android:layout_toRightOf="@+id/photo"
                android:textSize="18dp"/>

        </RelativeLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:textColor="#ff0000"
            android:textSize="20dp"/>

    </LinearLayout>




</FrameLayout>
